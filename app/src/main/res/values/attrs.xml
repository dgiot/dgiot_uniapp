<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--顶部标题-->
    <declare-styleable name="BaseTopAttr">
        <attr name="textTitle" format="string"></attr>
        <attr name="textRight" format="string"></attr>
        <attr name="imgRight" format="reference"></attr>
        <attr name="imgRight2" format="reference"></attr>
        <attr name="textRightColor" format="color"></attr>
    </declare-styleable>
    <!--横向多功能View封装-->
    <declare-styleable name="MultipleItemView">
        <attr name="leftTextColor" format="color" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightTextColor2" format="color" />
        <attr name="rightIcon" format="reference" />
        <attr name="leftText" format="string" />
        <attr name="editHint" format="string" />
        <attr name="rightText" format="string" />
        <attr name="showTopLine" format="boolean" />
        <attr name="showBottomLine" format="boolean" />
        <attr name="showLeftIcon" format="boolean" />
        <attr name="showRightIcon" format="boolean" />
        <attr name="showEdtText" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumberAddSubtractLayout">
        <attr name="editable" format="boolean" />
        <attr name="defaultNumber" format="float" />
        <attr name="borderDrawable" format="reference" />
        <attr name="dividerDrawable" format="reference" />
        <attr name="buttonLeftDrawable" format="reference" />
        <attr name="buttonRightDrawable" format="reference" />
        <attr name="buttonWidth" format="dimension" />
        <attr name="buttonTextSize" format="dimension" />
        <attr name="buttonLeftNormalTextColor" format="color" />
        <attr name="buttonLeftDisableTextColor" format="color" />
        <attr name="buttonRightNormalTextColor" format="color" />
        <attr name="buttonRightDisableTextColor" format="color" />
        <attr name="numberWidth" format="dimension" />
        <attr name="numberTextSize" format="dimension" />
        <attr name="numberTextColor" format="color" />
    </declare-styleable>

</resources>